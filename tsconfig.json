{
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",
		"strictNullChecks": true,
		"target": "es2019",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"strict": false,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"module": "ESNext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "react-jsx",
		"declaration": true,
		"stripInternal": true,
		"skipLibCheck": true,
		"skipDefaultLibCheck": true
	},
	"include": [
		"."
	],
	"exclude": ["dist"],
}